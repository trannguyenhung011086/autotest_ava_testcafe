{
  "name": "e2e-testing-with-jest",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupTestFrameworkScriptFile": "./jest.setup.js",
    "reporters": [
      "default",
      "jest-junit",
      "jest-stare"
    ]
  },
  "jest-stare": {
    "resultDir": "report/jest-stare"
  },
  "version": "1.0.0",
  "description": "Leflair website automation test",
  "main": "index.js",
  "scripts": {
    "test_api": "JEST_JUNIT_OUTPUT=report/junit_api.xml ./node_modules/.bin/jest tests/jest/e2e_api --verbose --detectOpenHandles --runInBand",
    "test_chromium": "./node_modules/.bin/testcafe \"chromium --no-sandbox\" tests/testcafe/e2e_ui/desktop --selector-timeout 15000 --assertion-timeout 5000 --reporter spec,xunit:report/junit_chromium.xml",
    "test_firefox": "./node_modules/.bin/testcafe firefox tests/testcafe/e2e_ui/desktop --selector-timeout 15000 --assertion-timeout 5000 --reporter spec,xunit:report/junit_firefox.xml",
    "test_mobile_emu": "./node_modules/.bin/testcafe \"chromium:emulation:device=iphone 6 --no-sandbox\" tests/testcafe/e2e_ui/mobile --selector-timeout 15000 --assertion-timeout 5000 --reporter spec,xunit:report/junit_mobile_emu.xml",
    "test_desktop_remote": "./node_modules/.bin/testcafe remote tests/testcafe/e2e_ui/desktop --qr-code --selector-timeout 15000 --assertion-timeout 5000",
    "test_mobile_remote": "./node_modules/.bin/testcafe remote tests/testcafe/e2e_ui/mobile --qr-code --selector-timeout 15000 --assertion-timeout 5000",
    "test_api_ci": "NODE_ENV=$NODE_ENV JEST_JUNIT_OUTPUT=report/junit_api.xml ./node_modules/.bin/jest tests/jest/e2e_api --verbose --detectOpenHandles --runInBand --reporters=\"default\" --reporters=\"jest-junit\"",
    "test_chromium_ci": "NODE_ENV=$NODE_ENV xvfb-run -a -s \"-screen 0 1280x720x24\" ./node_modules/.bin/testcafe \"chromium --no-sandbox\" tests/testcafe/e2e_ui/desktop --selector-timeout 15000 --assertion-timeout 5000",
    "test_firefox_ci": "NODE_ENV=$NODE_ENV xvfb-run -a -s \"-screen 0 1280x720x24\" ./node_modules/.bin/testcafe firefox tests/testcafe/e2e_ui/desktop --selector-timeout 15000 --assertion-timeout 5000",
    "test_mobile_emu_ci": "NODE_ENV=$NODE_ENV xvfb-run -a -s \"-screen 0 1280x720x24\" ./node_modules/.bin/testcafe \"chromium:emulation:device=iphone 6 --no-sandbox\" tests/testcafe/e2e_ui/mobile --selector-timeout 15000 --assertion-timeout 5000 --reporter spec,xunit:report/junit_mobile_emu.xml"
  },
  "author": "Hung Tran",
  "license": "ISC",
  "dependencies": {
    "@types/faker": "^4.1.4",
    "@types/jest": "^23.3.12",
    "@types/mongodb": "^3.1.18",
    "@types/node": "^10.12.18",
    "@types/papaparse": "^4.5.6",
    "@types/stripe": "^6.19.1",
    "axios": "^0.18.0",
    "axios-cookiejar-support": "^0.4.2",
    "faker": "^4.1.0",
    "jest": "^23.6.0",
    "jest-extended": "^0.11.0",
    "jest-junit": "^5.2.0",
    "jest-stare": "^1.9.1",
    "mongodb": "^3.1.10",
    "papaparse": "^4.6.2",
    "querystring": "^0.2.0",
    "stripe": "^6.20.0",
    "testcafe": "^0.23.3",
    "testcafe-live": "^0.1.4",
    "tough-cookie": "^2.5.0",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "typescript": "^3.2.2",
    "wait-for-expect": "^1.1.0",
    "xml-js": "^1.6.8"
  }
}