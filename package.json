{
  "name": "e2e-testing-with-jest",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupTestFrameworkScriptFile": "./jest.setup.js",
    "reporters": [
      "default",
      "jest-junit",
      "jest-stare"
    ]
  },
  "jest-stare": {
    "additionalResultsProcessors": [
      "jest-junit"
    ]
  },
  "version": "1.0.0",
  "description": "use selenium with jest",
  "main": "index.js",
  "scripts": {
    "start_selenium": "selenium-standalone install && selenium-standalone start",
    "test_api": "JEST_SUITE_NAME=\"End 2 End API Testing\" JEST_JUNIT_OUTPUT=\"report/junit_api.xml\" node_modules/.bin/jest tests/e2e_api --verbose --detectOpenHandles --runInBand",
    "test_ui_chrome": "JEST_SUITE_NAME=\"End 2 End UI Testing\" JEST_JUNIT_OUTPUT=\"report/junit_ui_chrome.xml\" SELENIUM_BROWSER=chrome node_modules/.bin/jest tests/e2e_ui/desktop --verbose --detectOpenHandles --runInBand",
    "test_ui_firefox": "JEST_SUITE_NAME=\"End 2 End UI Testing\" JEST_JUNIT_OUTPUT=\"report/junit_ui_firefox.xml\" SELENIUM_BROWSER=firefox node_modules/.bin/jest tests/e2e_ui/desktop --verbose --detectOpenHandles --runInBand",
    "test_ui_mobile": "JEST_SUITE_NAME=\"End 2 End UI Testing\" JEST_JUNIT_OUTPUT=\"report/junit_ui_mobile.xml\" node_modules/.bin/jest tests/e2e_ui/mobile --verbose --detectOpenHandles --runInBand",
    "test_all": "npm run test_api ; npm run test_ui_chrome ; npm run test_ui_firefox ; npm run test_ui_mobile",
    "test_api_ci": "NODE_ENV=$NODE_ENV npm run test_api -- --ci --reporters=default --reporters=jest-junit",
    "test_ui_chrome_ci": "NODE_ENV=$NODE_ENV SELENIUM_REMOTE_URL=$SELENIUM_REMOTE_URL npm run test_ui_chrome -- --ci --reporters=default --reporters=jest-junit",
    "test_ui_firefox_ci": "NODE_ENV=$NODE_ENV SELENIUM_REMOTE_URL=$SELENIUM_REMOTE_URL npm run test_ui_firefox -- --ci --reporters=default --reporters=jest-junit",
    "test_ui_mobile_ci": "NODE_ENV=$NODE_ENV SELENIUM_REMOTE_URL=$SELENIUM_REMOTE_URL npm run test_ui_mobile -- --ci --reporters=default --reporters=jest-junit"
  },
  "author": "Hung Tran",
  "license": "ISC",
  "dependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-typescript": "7.1.0",
    "@types/faker": "^4.1.4",
    "@types/jest": "^23.3.10",
    "@types/mongodb": "^3.1.17",
    "@types/node": "^10.12.15",
    "@types/puppeteer": "^1.11.1",
    "@types/selenium-webdriver": "^3.0.14",
    "@types/stripe": "^6.0.4",
    "axios": "^0.18.0",
    "axios-cookiejar-support": "^0.4.2",
    "chromedriver": "^2.45.0",
    "faker": "^4.1.0",
    "geckodriver": "^1.14.1",
    "jest": "^23.6.0",
    "jest-junit": "^5.2.0",
    "mongodb": "^3.1.10",
    "puppeteer": "^1.11.0",
    "selenium-standalone": "^6.15.4",
    "selenium-webdriver": "^4.0.0-alpha.1",
    "stripe": "^6.17.0",
    "tough-cookie": "^2.5.0",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "typescript": "^3.2.2"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-jest": "^23.6.0",
    "babel-preset-env": "^1.7.0",
    "jest-extended": "^0.11.0",
    "jest-stare": "^1.8.0",
    "querystring": "^0.2.0",
    "wait-for-expect": "^1.1.0"
  }
}
